
<h1><%= @user.name %></h1>

<section id="user-description" class="clearfix">
  <dl class="dl-horizontal">
    <dt>Name:</dt>
    <dd><%= @user.name %></dd>
    <dt>System Role:</dt>
    <dd><%= Role.find(@user.role_id).display_name %></dd>
  </dl>
</section>

<% if @projects.any? %>

<h3>Project Level Roles</h3>
<section class="clearfix">
  <table id="users" class="table table-hover table-condensed">
    <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "name" %></th>
      <th>Role</th>
    </tr>
    </thead>

    <tbody>
    <%= render partial: 'project_roles', collection: @projects, as: :project, locals: {user: @user} %>
    </tbody>
  </table>
  <%= paginate @projects %>
</section>

<% end %>

